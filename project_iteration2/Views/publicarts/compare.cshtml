@model IEnumerable<project_iteration2.Models.publicart>

@{
    ViewBag.Title = "compare";
}

   
<style>
    .namesContainer {
        display: flex;
        order: 0;
        text-size-adjust: 100%;
    }


    .vsSeparator {
        border-left: 1px solid #bebebe;
        bottom: 0;
        height: 100%;
        left: 50%;
        position: absolute;
    }

        .vsSeparator span {
            background-color: #fff;
            border: 1px solid #bebebe;
            border-radius: 15px;
            color: #616161;
            font-weight: 700;
            height: 30px;
            left: -17px;
            line-height: 29px;
            position: absolute;
            text-align: center;
            top: 50%;
            width: 30px;
        }

    .nameContainer  {
        padding-top: 10%;
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        line-height: 18.4px;
        min-width: 50%;
        padding-left: 15%;
        padding-right: 15%;
        width: 50%;
    }

    .nameReviewContainer {
        display: block;
    }

    .picturesContainer {
        display: flex;
        order: 1;
        position: relative;
        overflow-x: hidden;
        overflow-y: hidden;
        text-size-adjust: 100%;
    }

    .pictureContainer {
        display: block;
        min-width: 50%;
        text-size-adjust: 100%;
        width: 50%;
        line-height: 1.15;
    }

    .image {
        display: block;
        height: 100%;
        line-height: 1.15;
        margin-top: auto;
        margin-bottom: auto;
        margin-left: auto;
        margin-right: auto;
        width: 80%;
        text-align: center;
        overflow-x: hidden;
        overflow-y: hidden;
    }

    .comparisonTitle {
        background-color: #161616;
        bottom: -8px;
        content: "";
        height: 1px;
        left: calc(50% - 20px);
        position: absolute;
        width: 40px;
        text-align: center;
        text-size-adjust: 100%;
        margin-top: 15px;
    }

    .section1 {
        display: block;
        position: absolute;
        width: 100%;
        bottom: -150px;
    }
</style>  
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("GALLEVISIONERY", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    @Html.ActionLink("BACK", "Index", "publicarts")
                </li>
            </ul>

        </div>
    </div>
</div>
<div class="CompareField row" style="padding-top: 5%;">
    @using (Html.BeginForm())
    {
        <p>
            
                @Html.DropDownList("option1", "All")
            
                
                @Html.DropDownList("option2", "All")
               
            
            <input type="submit" value="Filter" style="position:absolute; left: 48.25%; z-index: 1;" />
        </p>
    }
</div>
    <div class="namesContainer">
        <div class="nameContainer" style="transform:translateX(0%)">
            <div class="nameReviewContainer">

                
              
                @if (Model.Count() <= 2)
                {
                    foreach (var item in Model)
                     {
                    
                         <h4 class="card-subtitle"> <b> @Html.DisplayFor(modelItem => item.Gallery_Name)</b></h4>

                     }
                }
                
            </div>
        </div>
        <div class="nameContainer" style="transform:translateX(0%)">
            <div class="nameReviewContainer">
                <p>
                    right compare
                </p>
            </div>
        </div>
    </div>
    <div class="picturesContainer">
        <div class="pictureContainer" style="transform:translateX(0%)">
            <div class="image">
                <p>
                    picture left
                </p>
            </div>

        </div>
        <div class="pictureContainer" style="transform:translateX(0%)">
            <div class="image">

                <p>
                    picture right
                </p>
            </div>
        </div>
    </div>
    <div class="vsSeparator" style="left:50%;">
        <span>vs</span>
    </div>
    <div class="comparisonTitle">
        <p>
            hey there
        </p>
    </div>


<section class="section1">
    <h1>
        section below
    </h1>
</section>


