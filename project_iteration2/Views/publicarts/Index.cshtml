                             </label>
                             <label class="btn btn-light" style="position: relative; left:25%;">
                                 @Html.CheckBox("photography", false) <b>Photography</b>
                             </label>
                             <label class="btn btn-light" style="position: relative; left:30%;">
                                 @Html.CheckBox("install", false) <b>Installation</b>
                             </label>
                             <label class="btn btn-light" style="position: relative; left:35%;">
                                 @Html.CheckBox("visual", false) <b>Visual Arts</b>
                             </label>
                         </div>

                     </div>
                 </div>




</p>
        </div>
    }
    <hr />
</div>

@foreach (var item in Model)

{
    <div class="col-md-4">
        <div class="card" style="width: 30rem;">
            <img class="card-img-top" src="~/Content/picture/@item.Id/image1.jpg" style="width: 100%; height:150px;">
            <div class="card-body">
                <h4 class="card-subtitle"> <b> @Html.DisplayFor(modelItem => item.Gallery_Name , new{ sortOrder = ViewBag.NameSortParm })</b></h4>

                <div>
                    
                    @Html.ActionLink("Details", "Details", "publicarts", new {id = item.Id}, new {@class = "btn btn-dark "})
                </div>
            </div>
        </div>
    </div>
}
    <br/>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", 
        new { page, currentFilter = ViewBag.CurrentFilter }))

<script>
    function unhide(divID) {
        var item = document.getElementById(divID);
        if (item) {
            item.className=(item.className=='hidden')?'unhidden':'hidden';
        }
    }
</script>