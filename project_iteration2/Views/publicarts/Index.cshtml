@model IEnumerable<project_iteration2.Models.publicart>

@{
    ViewBag.Title = "Index";
}

<style>
    html {
        width: 100%;
    }

    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        position: relative;
    }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    /* Add some padding inside the card container */
    .container {
        padding: 2px 16px;
    }

    .button {
        border-radius: 4px;
        background-color: #d8c4af;
        border: none;
        color: #FFFFFF;
        text-align: center;
        font-size: 20px;
        padding: 5px;
        width: 100px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
        left: 87%;
        position: relative;
    }

    #img {
        position: fixed;
        width: 100%;
        height: 100px;
    }

    label {
        position: absolute;
        top: 0;
        left: 0
    }

    input#show, input#hide {
        display: none;
    }

    span#content {
        display: block;
        -webkit-transition: opacity 1s ease-out;
        transition: opacity 1s ease-out;
        opacity: 0;
        height: 0;
        font-size: 0;
        overflow: hidden;
    }

    input#show:checked ~ .show:before {
        content: ""
    }

    input#show:checked ~ .hide:before {
        content: "Hide"
    }

    input#hide:checked ~ .hide:before {
        content: ""
    }

    input#hide:checked ~ .show:before {
        content: "Show"
    }

    input#show:checked ~ span#content {
        opacity: 1;
        font-size: 100%;
        height: auto;
    }

    input#hide:checked ~ span#content {
        display: block;
        -webkit-transition: opacity 1s ease-out;
        transition: opacity 1s ease-out;
        opacity: 0;
        height: 0;
        font-size: 0;
        overflow: hidden;
    }

    #show1 {
        position: absolute;
        top: 20px;
        left: 0
    }

    #content1 {
        display: block;
        -webkit-transition: opacity 1s ease-out;
        transition: opacity 1s ease-out;
        opacity: 0;
        height: 0;
        font-size: 0;
        overflow: hidden;
    }

    #show1:before {
        content: "Show"
    }

    #show1:active.show1:before {
        content: "Hide"
    }

    #show1:active ~ span#content1 {
        opacity: 1;
        font-size: 100%;
        height: auto;
    }

    

    
    /* extra */
    #content, #content1, #content2 {
        float: left;
        margin: 100px auto;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <img style="width:100%; height: 300px;" src="~/Content/images/banner1.png" />

    </div>
</div>

<hr />
<div class="row">
    @using (Html.BeginForm())
    {   <div class="md-form">
            <p>

                Find by name: @Html.TextBox("SearchString")
                Street dropdown: @Html.DropDownList("street", "All")
                Type dropdown: @Html.DropDownList("GallType", "All")
                Accesible Toilets: @Html.CheckBox("toilet", false)
                <br/>
                <input type="radio" id="show" name="group">
                <input type="radio" id="hide" name="group" checked>

                <label for="show" class="show" style="top:50px;"></label>
                <label for="hide" class="hide"></label>
                <span id="content">painting: @Html.CheckBox("painting", false)
                    Sculpture: @Html.CheckBox("sculpture", false)
                    Performing Arts: @Html.CheckBox("perf", false)
                    Photography: @Html.CheckBox("photography",false)
                    Installation: @Html.CheckBox("install", false)
                    Visual Arts: @Html.CheckBox("visual", false)
                    </span>
                

                <input type="submit" value="Search" class="btn" style="position:static; float: right;"/>
            </p>
        </div>
    }
    <hr/>
</div>

@foreach (var item in Model)

{
    <div class="col-md-4">
        <div class="card" style="width: 30rem;">
            <img class="card-img-top" src="~/Content/picture/@item.Id/image1.jpg" style="width: 100%; height:150px;">
            <div class="card-body">
                <h4 class="card-subtitle"> <b> @Html.DisplayFor(modelItem => item.Gallery_Name)</b></h4>

                <div>
                    @Html.ActionLink("Details", "Details", "publicarts", new { id = item.Id }, new { @class = "btn btn-dark " })
                </div>
            </div>
        </div>
    </div>

}
