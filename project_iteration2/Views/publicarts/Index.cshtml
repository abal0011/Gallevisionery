@model IEnumerable<project_iteration2.Models.publicart>

@{
    ViewBag.Title = "Index";
}

<style>
    html {
        width: 100%;
    }

    .card {
        /* Add shadows to create the "card" effect */
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        position: relative;
    }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    /* Add some padding inside the card container */
    .container {
        padding: 2px 16px;
    }

    .button {
        border-radius: 4px;
        background-color: #d8c4af;
        border: none;
        color: #FFFFFF;
        text-align: center;
        font-size: 20px;
        padding: 5px;
        width: 100px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
        left: 87%;
        position: relative;
    }

    #img {
        position: fixed;
        width: 100%;
        height: 100px;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <img style="width:100%; height: 300px;" src="~/Content/images/banner1.png" />

    </div>
</div>

<hr />
@using (Html.BeginForm())
{   <div class="md-form">
        <p>

            Find by name: @Html.TextBox("SearchString")
            Street dropdown: @Html.DropDownList("street", "All")
            Type dropdown: @Html.DropDownList("GallType","All")
            <input type="submit" value="Search" />
        </p>
    </div>
}


@foreach (var item in Model)

{
    <div class="col-md-4">
        <div class="card" style="width: 30rem;">
            <img class="card-img-top" src="~/Content/picture/@item.Id/image.jpg" style="width: 100%; height:150px;">
            <div class="card-body">
                <h4 class="card-subtitle"> <b> @Html.DisplayFor(modelItem => item.Gallery_Name)</b></h4>

                <div>
                    @Html.ActionLink("Details", "Details", "publicarts", new { id = item.Id }, new { @class = "btn btn-dark " })
                </div>
            </div>
        </div>
    </div>


}
